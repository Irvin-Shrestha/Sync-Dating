<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syncdating.ChooseLoginRegistrationActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="221dp"
        android:layout_height="265dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/DiscoverView"
        android:layout_width="match_parent"
        android:layout_marginTop="-45dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Discover New people"
        android:textSize="20dp"
        android:background="@color/white"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="83dp"
        android:id="@+id/login"/>

    <Button
        android:id="@+id/register"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="1dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="register" />

    <TextView
        android:id="@+id/Privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="By clicking log in or register, you agree with our Terms and Conditions."
        android:textAlignment="center" />
</LinearLayout>