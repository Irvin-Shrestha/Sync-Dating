<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.syncdating.LoginAndRegistration.LoginActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_btn1"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/arrow1" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="221dp"
        android:layout_height="265dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="-70dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/SigninView"
        android:layout_width="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="50dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Hello There!"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:textSize="30dp"
        android:background="@color/white"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/email"
        android:layout_width="310dp"
        android:layout_height="50sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/input_field"
        android:textColorHint="@color/Grey"/>

    <EditText
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_width="310dp"
        android:layout_height="50sp"
        android:hint="password"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:background="@drawable/input_field"
        android:textColorHint="@color/Grey"
        app:passwordToggleEnabled="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="162dp"
        android:layout_height="53dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="Login"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need Help?"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="-30dp"
        android:textColor="@color/Primary"
        android:fontFamily="@font/bold"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Yet Registered?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Register1"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintVertical_bias="0.952"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Registerre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Register."
        android:textColor="@color/Primary"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="180dp"
        app:layout_constraintVertical_bias="0.952"
        tools:ignore="MissingConstraints"/>
</LinearLayout>